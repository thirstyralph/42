#include "../fractol.h"

double	ft_atod(char *s)
{
	double	r;
	double	f;
	double	d;
	int		sign;

	r = 0;
	sign = 1;
	while (*s == ' ' || (*s >= 9 && *s <= 13))
		s++;
	if (*s == '-' || *s == '+')
	{
		if (*s == '-')
			sign = -1;
		s++;
	}
	while (*s >= '0' && *s <= '9')
		r = r * 10 + (*s++ - '0');
	if (*s == '.')
	{
		s++;
		f = 0.1;
		while (*s >= '0' && *s <= '9')
			r += (*s++ - '0') * f, f /= 10;
	}
	return (r * sign);
}
